{
  "name": "<%= name %>",
  "description": "<%= description %>",
  "repository": {
    "url": "<%= username %>/<%= name %>",
    "type": "git"
  },
  "main": "index.js",
  "scripts": {
    "start": "node index.js"<% if (test){ %>,
    "test": "cross-env NODE_ENV=test mocha -u bdd"<% } %><% if (watch){ %>,
    "dev": "reload index.js"<% } %>
  },
  "author": "<%= username %> <<%= email %>>",
  "license": "MIT",
  "dependencies": {<% if (cors){ %>
    "kcors": "^2.2.1",<% } %>
    "koa": "^2.4.1",
    "koa-bodyparser": "^4.2.0",
    "koa-compose": "^4.0.0",
    "koa-logger": "^3.1.0",
    "koa-onerror": "^4.0.0",
    "koa-router": "^7.3.0"<% if (session){ %>,
    "koa-session": "^5.8.1"<% } %><% if (!simple){ %>,
    "koa-static": "^4.0.2",
    "koa-views": "^6.1.3",
    "pug": "^2.0.0-rc.4"<% } %>
  },
  "devDependencies": {<% if (watch){ %>
    "@zcong/hot-reload": "^0.0.3"<% } %><% if (watch && test){ %>,<% } %><% if (test){ %>
    "cross-env": "^5.1.3",
    "mocha": "^5.0.0",
    "power-assert": "^1.4.4",
    "supertest": "^3.0.0"<% } %>
  }
}
